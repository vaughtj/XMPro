<?xml version="1.0" encoding="UTF-8"?>
<Grid xmlns="http://xamarin.com/schemas/2014/forms" 
      xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
      x:Class="XMProApp.Controls.BusyIndicator"
      xmlns:syncfusion="clr-namespace:Syncfusion.SfBusyIndicator.XForms;assembly=Syncfusion.SfBusyIndicator.XForms"
      x:Name="this">

    <syncfusion:SfBusyIndicator IsBusy="{Binding IsBusy}"  Title="Loading.." ViewBoxHeight="150" ViewBoxWidth="150" TextColor="Blue"  AnimationType="Ball"/>
    <Label Text="{Binding Text, Source={x:Reference this}}" />
</Grid>